---
type Props = {
  learnMoreList: {
    title: string;
    slug: string;
  }[];
};

const { learnMoreList } = Astro.props;
---

<div
  id="learn-more-list"
  class="grid grid-cols-4 gap-5 sm:pl-[47px]
sm:pr-[47px]"
>
  {
    learnMoreList.map((content) => {
      return (
        <div id={content.title.replace(/\s+/g, "-").toLowerCase()}>
          <a href={content.slug}>
            <p>{content.title}</p>
          </a>
        </div>
      );
    })
  }
</div>

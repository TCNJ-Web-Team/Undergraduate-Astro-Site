---
import Accordion from "./Accordion";
import QuoteContent from "./QuoteContent";

type Props = {
  lowerContent: {
    title: string;
    body: string;
  }[];
  quote?: string;
};

const { lowerContent, quote } = Astro.props;
// console.log(quote);
---

<div
  id="additional-information"
  class="pl-[35px]
  pr-[35px]
  pt-[75px] pb-[94px]
  sm:px-[45px]
sm:pt-[75px]
sm:pb-[94px]
md:px-[20px]
md:pt-[150px]
md:pb-[150px]
lgMd:px-[0px]
lg:px-[0px]"
>
  {quote && <QuoteContent content={quote} client:load />}
  <hr class="bg-[#BFBFBF] h-[1px] w-auto border-0" />
  {
    lowerContent.map((content) => {
      return (
        <div
          class="border-b border-[#BFBFBF]"
          id={content.title.replace(/\s+/g, "-").toLowerCase()}
        >
          <Accordion
            startOpen={false}
            header={content.title}
            idName={content.title}
            client:load
          >
            <div set:html={content.body} />
          </Accordion>
        </div>
      );
    })
  }
</div>

---
import Accordion from "./Accordion";

type Props = {
  lowerContent: {
    title: string;
    body: string;
  }[];
};

const { lowerContent } = Astro.props;
---

<div
  id="lower-content"
  class="pt-[75px] pb-[75px]
  sm:pl-[47px]
      sm:pr-[47px]
sm:pt-[75px]
sm:pb-[125px]
md:pt-[150px]
md:pb-[200px]"
>
  <hr class="bg-[#BFBFBF] h-[1px] w-auto border-0" />
  {
    lowerContent.map((content) => {
      return (
        <div
          class="border-b border-[#BFBFBF]"
          id={content.title.replace(/\s+/g, "-").toLowerCase()}
        >
          <Accordion
            startOpen={false}
            header={content.title}
            idName={content.title}
            client:load
          >
            <div set:html={content.body} />
          </Accordion>
        </div>
      );
    })
  }
</div>

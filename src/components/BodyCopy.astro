---
import ProgramCareersHeading from "./ProgramCareersHeading";
import ProgramGlanceCopy from "./ProgramGlanceCopy";

type Props = {
  left?: string;
  right?: string;
  body?: string;
  heading: string;
};
const { left, right, body, heading } = Astro.props;
// console.log(left);
const headingLower = heading.replace(/\s+/g, "-").toLowerCase();
---

<div id={headingLower} class="relative">
  {
    heading != `Careers` ? (
      <h2
        class="
      text-[23px] 
      leading-[33px] 
      pb-[20px]
      sm:pb-[2.188rem] 
      sm:text-[30px] 
      sm:leading-[40px] 
      font-chunkfive 
      text-tcnjblue"
      >
        {heading}
      </h2>
    ) : (
      <ProgramCareersHeading heading="Careers" />

      // <h2 class="text-[4.063rem] leading-[4.688rem] pb-[50px] font-chunkfive text-tcnjblue">
      //   {heading}
      // </h2>
    )
  }
  {
    body && heading == `Careers` && (
      <ProgramGlanceCopy id={`${headingLower}-body`} copy={body} />
    )
  }
  <div
    class="flex
  gap-[60px]
  sm:gap-[100px]
  text-[1.438rem]
  inner-body-copy-white
  flex-col"
  >
    <div
      class={heading === "Careers"
        ? "flex flex-col sm:flex-row pb-[100px] sm:pb-[200px] gap-[50px] sm:gap-[40px]"
        : ""}
    >
      {left && <div id={`${headingLower}-left`} set:html={left} />}
      {
        heading == `Careers` && (
          <div id={`${headingLower}-right`} set:html={right} />
        )
      }
    </div>
    {
      body && heading != `Careers` && (
        <div class="" id={`${headingLower}-body`} set:html={body} />
      )
    }
  </div>
</div>
